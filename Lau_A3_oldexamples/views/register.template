    <form name="register_form" action="/process_register" method="POST">
        <div class="container">
          <h2>Register</h2>
          <p>Please fill in this form to create an account.</p>
          <hr>
                
          <p><label for="name"><b>First & Last Name:</b></label><br>
          <input type="text" placeholder="Enter name" name="name" id="name" required></p>
                
          <p><label for="username"><b>Create a Username:</b></label><br>
          <input type="text" placeholder="Enter username" name="username" id="username" required></p>
      
          <p><label for="password"><b>Create a Password:</b></label><br>
          <input type="password" placeholder="Enter password" name="password" id="password" required></p>
      
          <p><label for="repeat_password"><b>Confirm Password:</b></label><br>
          <input type="password" placeholder="Enter password again" name="repeat_password" id="repeat_password" required></p>
                
          <p><label for="email"><b>Email</b></label><br>
          <input type="text" placeholder="Enter Email" name="email" id="email" required></p>
          <hr>
      
          <p><button type="submit">Register</button></p>
        </div>
          <p>Already have an account? <a href="/login"><font color="black">Log in here</font></a>.</p>
